while true
do 
    echo "1.enter input:"
    echo "2.create file using cat"
    echo "3.view girst lines"
    echo "4.copy fgile"
    echo "5.couny no of lines"
    echo "6.exit"
    read -p "enter ur choice" choice
    
    case $choice in
    
    1)
        read -p "enter the input:" input
        echo "input:"$input
        ;;
    2) 
        read -p "enter filename" filename
        echo "enter the contents:"
        cat > "$filename"
        echo "file '$filename' created"
        ;;
    3)
        read -p "enter filename:" filename
        if [ -f "$filename" ];then
            tail "$filename"
        else
         
           echo "file not found"
        fi
        ;;
    4)
        read -p "enter source filename" src
        read -p "enter destination:"dest
        if [ -f "$filename" ];then
            cp"$src" "$dest"
            echo "files copied"
        else
            echo "file not found"
        fi
        ;;
    5)
        read -p " enter filename" filename
         if [ -f "$filename" ];then
            echo "lines:$(wc -l <"$filename")"
        else
            echo "file not found"
        fi
        ;;
    6)
        echo "exiting"
        break
        ;;
    *)
        echo "invalid hoice"
        ;;
    esac
done
